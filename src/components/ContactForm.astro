<form class="flex flex-col gap-4 p-6 bg-night rounded-md">
    <h2 id="contact" class="text-2xl font-bold text-center text-light">Envíanos un mensaje</h2>
    <label for="name" class="text-sm text-light font-bold">Nombre</label>
    <input type="text" id="name" name="name" class="p-2 rounded-md bg-dark text-light" required />
    <label for="email" class="text-sm text-light font-bold">Correo Electrónico</label>
    <input type="email" id="email" name="email" class="p-2 rounded-md bg-dark text-light" required />
    <label for="message" class="text-sm text-light font-bold">Mensaje</label>
    <textarea id="message" name="message" class="p-2 rounded-md bg-dark text-light" required rows="4"></textarea>
    <button type="submit" class="bg-gold text-dark font-bold py-2 px-4 rounded-md cursor-pointer">Enviar Mensaje</button>
    <p id="success-message" class="bg-dark text-gold text-center py-2 rounded-md opacity-0 transition-opacity duration-500">
        ¡Mensaje enviado! Nos pondremos en contacto contigo pronto.
    </p>
</form>

<script>
  const form = document.querySelector("form");
  const successMessage = document.getElementById("success-message");
  form?.addEventListener("submit", (e) => {
    e.preventDefault();
    form.reset();
    if (!successMessage) return;
    successMessage.style.opacity = "1";
    setTimeout(() => {
      successMessage.style.opacity = "0";
    }, 4000);
  });
</script>